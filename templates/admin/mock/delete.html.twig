{% extends 'admin/layout.html.twig' %}

{% block title %}Edit mock record{% endblock %}

{% block content %}
    <div class="row">
        <div class="container">
        {{ form_start(form) }}

        {{ form_errors(form) }}

        <p>Do you really want to delete <em>{{ mock }}</em> ?</p>

        <hr class="my-4">

        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-danger'}, 'label': 'Delete'}) }}

        <a href="{{ path('admin.mock.list', { 'origin_id': origin }) }}" class="btn btn-outline-secondary">Cancel</a>

        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}